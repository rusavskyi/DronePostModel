<Window x:Class="DroneSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DroneSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Label x:Name="label" Content="Drone Sumilation" Height="27" Margin="346,10,307.6,0" VerticalAlignment="Top" Width="140" HorizontalAlignment="Center"/>
		<Button x:Name="add_drone" Content="Add drone" HorizontalAlignment="Left" Margin="211,227,0,0" VerticalAlignment="Top" Width="75" Click="button_Click_1"/>
		<Label x:Name="label1" Content="Drone Model" HorizontalAlignment="Left" Margin="148,47,0,0" VerticalAlignment="Top"/>
		<Label x:Name="label2" Content="Model name" HorizontalAlignment="Left" Margin="75,79,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="textBoxModelName" HorizontalAlignment="Left" Height="23" Margin="166,82,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
		<Label x:Name="label3" Content="Max Size Carry" HorizontalAlignment="Left" Margin="64,110,0,0" VerticalAlignment="Top"/>
		<ComboBox x:Name="comboBoxMaxSizeCarry" HorizontalAlignment="Left" Margin="166,113,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBoxMaxSizeCarry_SelectionChanged"/>
		<Label x:Name="label4" Content="Max Weight Carry" HorizontalAlignment="Left" Margin="48,141,0,0" VerticalAlignment="Top"/>
		<Label x:Name="label6" Content="Max Flight Distance" HorizontalAlignment="Left" Margin="38,172,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="textBoxMaxWeightCarry" HorizontalAlignment="Left" Height="23" Margin="166,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="textBoxMaxFlightDistance" HorizontalAlignment="Left" Height="23" Margin="166,176,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
	</Grid>
</Window>
